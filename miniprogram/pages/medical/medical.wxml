<!-- remind.wxml -->
<view class="header">
  <text class="title" style="text-align: center;">添加药品</text>
</view>

<view class="reminder-page">
  <view class="input-group">
    <text>药品数量：</text>
    <textarea bindinput="onContentInput" placeholder="请输入提醒内容"></textarea>
  </view>
  <view class="input-group">
    <text>药品余量（盒）：</text>
    <input bindinput="onInput" type="time" />
  </view>
  <view class="button-group">
    <button bindtap="onCancel">取消</button>
    <button bindtap="onConfirm">确认</button>
  </view>
</view>
