.container {
  position: relative;
  z-index: 1; /* 确保内容在背景图下层 */
}

.background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 0; /* 确保背景图在内容上层 */
}

.background-image {
  width: 100%;
  height: 100%;
  object-fit: cover; /* 保持纵横比并覆盖整个容器 */
}

.item {
  margin-bottom: 20rpx;
  text-align: center; /* 居中文本 */
}

.complete-btn {
  width: 100%;
  height: 90rpx; /* 调整高度 */
  padding: 10rpx;
  background-color: #07c160;
  color: #ffffff;
  border: none;
  border-radius: 4rpx;
  cursor: pointer;
  margin-top: 20rpx;
  box-sizing: border-box;
}