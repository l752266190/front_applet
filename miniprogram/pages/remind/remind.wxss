/* remind.wxss */

.reminder-page {
  padding: 20rpx;
}

.input-group {
  margin-bottom: 20rpx;
}

textarea {
  width: 100%;
  height: 100rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
  padding: 10rpx;
  box-sizing: border-box;
}

input {
  width: 100%;
  height: 100rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
  padding: 10rpx;
  box-sizing: border-box;
}

.button-group {
  display: flex;
  justify-content: space-between;
}

button {
  width: 45%;
  height: 100rpx;
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 5rpx;
  font-size: 30rpx;
}
